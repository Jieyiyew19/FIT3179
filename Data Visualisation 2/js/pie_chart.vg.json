{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "data": {
        "url": "https://jieyiyew19.github.io/FIT3179/Data%20Visualisation%202/data/covid-dataset-test-10OCT.csv"
    },
    "mark": "arc",
    "encoding": {
        "theta": {"field": "total_cases", "type": "quantitative", "aggregate":"average"},
        "color": {"field": "continent","type": "nominal"},
        "tooltip": [
            {"field": "continent", "type":"nominal","title": "Continent"},
            {"field": "total_cases","type":"quantitative","title":"Average Covid 19 cases", "aggregate":"max"}
        ]
    }
}